{
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Enabled": true,
    "python.linting.enabled": true,
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, UseTab: Always, IndentWidth: 4, TabWidth: 4, AllowShortIfStatementsOnASingleLine: true, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4 }",
    "C_Cpp.clang_format_fallbackStyle": "Mozilla",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.autoAddFileAssociations": false,
    "bracketPairColorizer.consecutivePairColors": [
        "()",
        "[]",
        "{}",
        [
            // "#838FA7",
            "#87a3dd",
            "#91FCF7",
            "#56B7C3",
            "#C7F34E",
            "#F5BF43",
            // "#e68a00",
            // "#739900",
        ],
        "#e51400"
    ],
    "editor.fontSize": 20,
    "C_Cpp.errorSquiggles": "Enabled",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.fontFamily": "'Menlo','Consolas','DejaVu Sans Mono'",
    "editor.fontLigatures": true
}